		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-svelte": "^3.0.3",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.4.3",
		"mdsvex": "^0.12.3",
